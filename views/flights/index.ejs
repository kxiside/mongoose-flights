<%- include('../partials/header') %>

<h2>All Flights</h2>


<table id="list">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Airport</th>
            <th>Flight No</th>
            <th>Departure</th>
        </tr>
    </thead>
    <tbody>
        <% flights.forEach(flight => { %>
            <tr>
                <td><%= flight.airline %></td>
                <td><%= flight.airport %></td>
                <td><%= flight.flightNo %></td>
                <td><%= flight.departure %></td>
                <td><a href="/flights/<%= flight.id %>"><div>Details</div></a></td>
            </tr>
        <% }) %>
    </tbody>
</table>



<%- include('../partials/footer') %>